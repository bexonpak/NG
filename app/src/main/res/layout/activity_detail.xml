<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/detail_constraint_layout"
        tools:context=".view.activity.DetailActivity">

    <ScrollView
            android:animateLayoutChanges="true"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detail_scroll_view">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/detail_title"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="48sp"
                    android:lineSpacingMultiplier="1.1"
                    tools:text="Feathered Fight"/>

            <ImageView
                    android:animateLayoutChanges="true"
                    android:id="@+id/detail_image_view"
                    android:paddingTop="18dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    tools:text="detail_publish_date"
                    android:id="@+id/detail_publish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightGray"
                    android:paddingTop="8dp"
                    android:layout_gravity="center_horizontal"/>

            <TextView
                    tools:text="detail_alt_text"
                    android:id="@+id/detail_alt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightGray"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"/>

            <TextView
                    tools:text="detail_caption"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="28dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:lineSpacingMultiplier="1.1"
                    android:id="@+id/detail_caption"/>

            <TextView
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="65dp"
                    tools:text="detail_credit"
                    android:id="@+id/detail_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightGray"
                    android:autoLink="all"
                    android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
            android:animateLayoutChanges="true"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_progress_bar"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>